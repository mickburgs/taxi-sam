<!DOCTYPE html>
{% set locale = 'nl' %}
{% if app.request.locale is defined and app.request.locale is not empty %}
    {% set locale = app.request.locale %}
{% endif %}
<!--[if IE 8]>
<html class="no-js lt-ie9" lang="{{ locale }}" > <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="{{ locale }}" > <!--<![endif]-->
    <head>
        <meta charset="UTF-8" />
        <meta name="theme-color" content="#3694DE"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% stylesheets  output="css/style.min.css"
        '@AppBundle/Resources/public/vendor/bootstrap/dist/css/bootstrap.min.css'
        '@AppBundle/Resources/public/vendor/components-font-awesome/css/font-awesome.min.css'
        '@AppBundle/Resources/public/vendor/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css'
        '@AppBundle/Resources/public/css/style.min.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% image '@AppBundle/Resources/public/images/favicon.ico' %}
        <link rel="icon" type="image/x-icon" href="{{ asset_url }}" />
        {% endimage %}

        {{ sonata_seo_title() }}
        {{ sonata_seo_metadatas() }}
    </head>
    <body>
        {% include 'AppBundle:menu:menu.html.twig' %}
        {% if carousel is defined and carousel == true %}
            {#{% include 'AppBundle:components:carousel.html.twig' %}#}
        {% endif %}
        <div class="body-container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            {% javascripts output="js/js.min.js"
            '@AppBundle/Resources/public/vendor/jquery/dist/jquery.min.js'
            '@AppBundle/Resources/public/vendor/bootstrap/dist/js/bootstrap.min.js'
            '@AppBundle/Resources/public/vendor/moment/min/moment-with-locales.min.js'
            '@AppBundle/Resources/public/vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js' %}
            <script type="text/javascript" src="{{ asset_url }}" ></script>
            {% endjavascripts %}
        {% endblock %}
        <script type="text/javascript">
          $(function () {
            $('#datetimepicker').datetimepicker({
              locale: 'nl',
              minDate: new Date()
            });
          });
        </script>
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-106241640-1', 'auto');
          ga('send', 'pageview');

        </script>
    </body>
</html>
