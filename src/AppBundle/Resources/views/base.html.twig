<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Service Taxi Flevoland{% endblock %}</title>
        {% block stylesheets %}
            <link type="text/css" href="{{ asset('assets/css/bootstrap.css') }}" rel="stylesheet">
            <link type="text/css" href="{{ asset('assets/css/font-awesome.css') }}" rel="stylesheet">
            <link type="text/css" href="{{ asset('assets/css/bootstrap-datetimepicker.min.css') }}" rel="stylesheet">
            <link type="text/css" href="{{ asset('bundles/app/css/style.css') }}" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% include 'AppBundle:menu:menu.html.twig' %}
        {% if carousel is defined and carousel == true %}
            {% include 'AppBundle:components:carousel.html.twig' %}
        {% endif %}
        <div class="body-container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('assets/js/jquery.js') }}"></script>
            <script type="text/javascript" src="{{ asset('assets/js/bootstrap.js') }}"></script>
            <script type="text/javascript" src="{{ asset('assets/js/moment.js') }}"></script>
            <script type="text/javascript" src="{{ asset('assets/js/bootstrap-datetimepicker.min.js') }}"></script>
        {% endblock %}
        <script type="text/javascript">
          $(function () {
            $('#datetimepicker').datetimepicker({
              locale: 'nl',
              minDate: new Date()
            });
          });
        </script>
    </body>
</html>
